@model IList<StarWarsKb.Infrastructure.Model.Character>
@{
    ViewBag.Title = "Characters";
    Layout = "_Layout";
}

<h1 class="display-6">Star Wars Characters</h1>
<br/>
<div class="list-group">
    @foreach (var c in Model)
    {
        <a asp-controller="Swkb" asp-action="CharacterInfo" asp-route-id=@c.StarWarId class="list-group-item list-group-item-action d-flex gap-3 py-3">
            <img src="https://img.icons8.com/color/32/000000/star-wars.png" width="32" height="32" class="rounded-circle flex-shrink-0" alt="sw">
            <div class="d-flex gap-3 w-100 justify-content-between">
                <div>
                    <h6 class="mb-0">@c.Name</h6>
                    <p class="mb-0 opacity-75">Homeworld: @c.HomeWorld.Name, height:
                        @if (c.Height < 0)
                        {
                            <span>unknown</span>
                        }
                        else
                        {
                            <span>@c.Height</span>
                        }
                        mass:
                        @if (c.Mass < 0)
                        {
                            <span>unknown</span>
                        }
                        else
                        {
                            <span>@c.Mass</span>
                        }
                        ,
                        hair color: @c.HairColor,
                        eye color: @c.EyeColor, birth year: @c.BirthYear, gender: @c.Gender, starships: @c.StarshipCharacters.Count
                    </p>
                </div>
            </div>
        </a>
    }
</div>

